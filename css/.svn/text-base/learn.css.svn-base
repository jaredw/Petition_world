/* RUPERT ADDED FOR LAYOUT ___________________________________________________________________ */

#learn div {margin: 0 !important;}

#learn #tourlist {
  margin: 0;
  padding: 0;
  float: left;
  width: 186px;
  height: 584px;
  overflow-y: scroll;
  border: 1px solid #999;
}

#learn #earth_container {
  margin-bottom: 1em;
  overflow: hidden;
  display: none;
}

#learn #map3d_container {
  width: 540px;
  height: 463px;
  border: 1px solid #000;
  float: right;
}

#learn #map3d {
  height: 100%;
}

#learn #caption {
  height: 100px;
  border: 1px solid #999;
  border-top: 0;
  width: 520px;
  padding: 10px;
  float: right;
}

#learn #about {margin-top: 35px !important;}






/* ORIGINAL CSS FROM KARIN ___________________________________________________________________ */

#learn #tourlist_status.friendly {
  font-weight: bold;
  color: #3A9457;
}

#learn #tourlist_status.error {
  font-style: italic;
  font-weight: bold;
  color: #a00;
}

#learn #embedsection {
  display: none;
  visibility: hidden;
  padding-top: 10px;
}






/* RUPERT UPDATED TOUR LIST __________________________________________________________________ */

#learn #tourlist li {
  cursor: pointer;
  padding: 10px 8px;
  list-style: none;
  text-align: center;
  background: #EEE;
  border-bottom: 1px solid #CCC;
}

#learn #tourlist img {border: 1px solid #666;}
#learn #tourlist li:hover {background: white;}

#learn #tourlist li.selected, #learn #tourlist li.hover {
  background: url(images/bg_selected.gif) no-repeat;
  cursor: default;
}

#learn #tourlist span.title {
  font-weight: bold;
  display: block;
  line-height: 120%;
  margin-bottom: .3em;
}

/* hide the time details */
#learn #tourlist span.meta {display: none;}

#learn #tourlist span.narrator {
  color: #666;
  font-size: 90%;
  display: block;
}






/* BUTTONS AND OTHER PAGE ELEMENTS ___________________________________________________________________ */

#learn .links {
  overflow: hidden;
  padding-top: 15px;
}

#learn .links.first {
  border-top: 1px solid #CCC;
}

#learn .links div {
  overflow: hidden;
  float: right;
  width: 42%;
  padding-left: 50px;
  background: url(http://www.google.com/images/icons/earth-32.gif) no-repeat;
}

#learn .links div.first {float: left; clear: both;}
#learn .links div img {margin: 0 10px 5px 0;}
#learn .links div.youtube {background-image: url(http://www.google.com/nonprofits/images/youtube.gif)}
#learn .links div.ipcc {background-image: url(images/ipcc_32.png); background-position: 0 2px;}
#learn .links div.unfccc {background-image: url(images/unfccc.png); background-position: 0 2px;}

#learn #controls  {
  margin: 0 0 8px 0;
  overflow: hidden;
}

#learn #controls a {
  border: 1px solid #999;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  padding: 2px 5px;
  text-decoration: none;
  color: #333;
  background: #E3E3E3 url(images/bg_button.png) repeat-x;
  overflow:hidden;
  float:right;
  margin-left: 3px;
  display: block;
}

#learn #controls a:hover {
  border-color: #333;
  background-color: #ccc;
}

#learn #controls a:active {
  background-color: #bbb;
  outline: 0;
}

#learn #controls a span {
  background: red;
  width: 15px;
  height: 13px;
  display: block;
  float: left;
  margin-top:3px;
  background: url(images/controls.png) no-repeat;
}

#learn #controls a.pause, #learn #controls a.play {min-width: 54px;}
#learn #controls a.expand, #learn #controls a.contract {min-width: 64px;}

#learn #controls a.pause span {background-position: -20px 0;}
#learn #controls a.reset span {background-position: -40px 0;}
#learn #controls a.expand span {background-position: -60px 0;}
#learn #controls a.contract span {background-position: -80px 0;}

/* TOGGLING ___________________________________________________________________ */

#learn .expanded #tourlist {display: none;}
#learn .expanded #map3d_container {width: 738px; height: 571px;}
#learn .expanded #caption {width: 718px;}

#learn #controls .pause {display: none;}
#learn .playing #controls .pause {display: block;}
#learn .playing #controls .play {display: none;}

#learn #controls .contract {display: none;}
#learn .expanded #controls .contract {display: block;}
#learn .expanded #controls .expand {display: none;}
